<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".view.AddDiaryFragment">
    
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/selected_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:clickable="false"
        android:focusable="false"
        android:textColorHint="@color/white"
        app:endIconDrawable="@drawable/icon_calendar_diary"
        app:endIconMode="custom"
        app:endIconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/selected_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_background"
            android:alpha="0.8"
            android:clickable="false"
            android:focusable="false"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:text="@string/date_example"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>
    
    <EditText
        android:id="@+id/diary_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selected_date_layout"
        app:endIconMode="clear_text"
        android:hint="@string/title"
        android:inputType="text"
        android:autofillHints="Başlık yazınız"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/how_are_you_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_are_you_today"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diary_title" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/how_are_you_today">

        <ImageButton
            android:id="@+id/ib_mood_veryhappy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:contentDescription="@string/mood_veryhappy_contentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emoji_veryhappy" />

        <ImageButton
            android:id="@+id/ib_mood_happy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:contentDescription="@string/mood_happy_contentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emoji_happy" />

        <ImageButton
            android:id="@+id/ib_mood_expressionless"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:contentDescription="@string/mood_expressionless_contentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emoji_expressionless" />

        <ImageButton
            android:id="@+id/ib_mood_sad"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:contentDescription="@string/mood_sad_contentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emoji_sad" />

        <ImageButton
            android:id="@+id/ib_mood_cry"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:contentDescription="@string/mood_cry_contentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emoji_cry" />

        <ImageButton
            android:id="@+id/ib_mood_angry"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:contentDescription="@string/mood_angry_contentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emoji_angry" />

        <ImageButton
            android:id="@+id/ib_mood_cool"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:contentDescription="@string/mood_cool_contentDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emoji_cool" />
    </LinearLayout>

    <ImageView
        android:id="@+id/add_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/add_photo_contentDescription"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toTopOf="@id/written_diary_text"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:srcCompat="@drawable/icon_add_photo_2"/>

    <EditText
        android:id="@+id/written_diary_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit_text_background"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:gravity="top"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:scrollbars="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/feel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_photo"
        android:autofillHints="Ne hissediyorsunuz?" />
</androidx.constraintlayout.widget.ConstraintLayout>