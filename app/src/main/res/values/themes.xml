<resources >
    <style name="Theme.MyDiary" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:windowBackground">@drawable/main_background</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>

    <style name="DatePickers" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/date_background</item>
        <item name="colorControlActivated">@color/lilac</item>
        <item name="android:selectableItemBackgroundBorderless">@color/date_background</item>
        <item name="colorControlHighlight">@color/lilac</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/floatingActionButton</item>
        <item name="backgroundTint">@color/main_color</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="floatingActionButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>


</resources>