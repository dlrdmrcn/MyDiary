<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
    
    <style name="mainTextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="numberOfMoodsTextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>